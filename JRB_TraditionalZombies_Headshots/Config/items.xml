<!-- Ammo -->
	<!-- Shotgun 
	Remove previous dismember chance -->
	<remove xpath="/items/item[contains(@name, 'Shell') or contains(@name, 'Slug')]/effect_group[@name='Base Effects']/passive_effect[@name='DismemberChance']" />
			<!-- Limbs -->
	<append xpath="/items/item[contains(@name, 'Shell')]/effect_group[@name='Base Effects']">
		<passive_effect name="DismemberChance" operation="base_set" value="0.5" tags="leg,arm"/>
	</append>
			<!-- Head -->
	<append xpath="/items/item[contains(@name, 'Shell')]/effect_group[@name='Base Effects']">
		<passive_effect name="DismemberChance" operation="base_set" value="1" tags="head"/>
	</append>
			<!-- Slug -->
