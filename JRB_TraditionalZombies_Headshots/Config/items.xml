<TraditionalZombies_Headshots>

<!-- Melee Weapons -->
	<!-- Hunting Knife -->
	<append xpath="/items/item[@name='meleeToolHuntingKnife']/effect_group[@name='Base Effects']">
		<passive_effect name="DismemberChance" operation="base_set" value="1" tags="head"/>
	</append>	
